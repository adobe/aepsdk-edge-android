<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.adobe.marketing.mobile.tutorial">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="MainApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EdgeTutorialApp"
        tools:targetApi="31">
        <activity
            android:name="MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.EdgeTutorialApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "edgetutorialapp://mainâ€ -->
                <data android:scheme="edgetutorialapp"
                    android:host="main" />
            </intent-filter>

        </activity>
        <activity
            android:name=".AssuranceActivity"
            android:label="Connect to Assurance"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.EdgeTutorialApp">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AssuranceActivity" />
        </activity>
    </application>

</manifest>